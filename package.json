{
  "name": "portfolio-email-server",
  "version": "2.0.0",
  "description": "Serverless email functions for portfolio contact form",
  "type": "module",
  "scripts": {
    "build": "echo 'No build step required for serverless functions'",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "vercel-dev": "vercel dev",
    "deploy": "vercel --prod",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/email-server.test.js",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch tests/email-server.test.js",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage tests/email-server.test.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "nodemailer": "^7.0.9"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vercel": "^41.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
